{
  "name": "portico",
  "version": "0.0.0-development",
  "type": "module",
  "description": "Generate stable, unique development ports for microfrontends based on package name",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "bin": {
    "portico": "./dist/cli.mjs"
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly && cp dist/index.d.ts dist/index.d.cts",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepublish": "npm run build",
    "prepare": "lefthook install",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "port",
    "microfrontend",
    "development",
    "webpack",
    "angular",
    "react",
    "vue",
    "devserver"
  ],
  "author": "Kevin Brey",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manbearwiz/portico.git"
  },
  "bugs": {
    "url": "https://github.com/manbearwiz/portico/issues"
  },
  "homepage": "https://github.com/manbearwiz/portico#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-angular": "^19.3.0",
    "@tsconfig/recommended": "^1.0.3",
    "@tsconfig/strictest": "^2.0.2",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.0",
    "lefthook": "^1.12.3",
    "publint": "^0.3.12",
    "semantic-release": "^25.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "vitest-tiny-reporter": "^1.2.0"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "commander": "^14.0.0"
  }
}
